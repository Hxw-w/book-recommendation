<h1>Rate a Book</h1>

<%= form_tag reading_records_path do %>
  <div>
    <label for="book_id">Book</label>
    <%= select_tag :book_id, options_from_collection_for_select(@books, :id, :title) %>
  </div>

  <div>
    <label for="rating">Rating (1â€“5)</label>
    <%= number_field_tag :rating, 5, min: 1, max: 5 %>
  </div>

  <div>
    <label for="comment">Comment</label>
    <%= text_area_tag :comment %>
  </div>

  <%= hidden_field_tag :user_id, 1 %> <!-- simulated user -->
  <%= submit_tag "Submit Rating" %>
<% end %>

