<table border="1" cellpadding="10" cellspacing="0">
<style>
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }
  th {
    background-color: #f2f2f2;
  }
  th, td {
    text-align: left;
    padding: 10px;
    border: 1px solid #ccc;
  }
</style>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Author</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.genre %></td>
        <td><%= book.author&.name || "Unknown" %></td>
        <td><%= book.rating || "-" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
