<h1><%= current_user.name %>'s Reading Records</h1>

<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Comment</th>
      <th>Rated On</th>
    </tr>
  </thead>
  <tbody>
    <% @reading_records.each do |record| %>
      <tr>
        <td><%= record.book.title %></td>
        <td><%= record.book.genre %></td>
        <td><%= record.rating %>/5</td>
        <td><%= record.comment.presence || "â€”" %></td>
        <td><%= record.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
