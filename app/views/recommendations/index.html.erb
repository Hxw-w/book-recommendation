<h1>Book Recommendations</h1>

<%= form_with url: recommendations_path, method: :get, local: true do %>
  <label>Choose a genre:</label>
  <%= select_tag :genre, options_for_select(Book.pluck(:genre).uniq, @genre), include_blank: true %>
  <%= submit_tag "Get Recommendations" %>
<% end %>

<h2>Recommended Books</h2>
<ul>
  <% @recommended_books.each do |book| %>
    <li>
      <strong><%= book.title %></strong> by <%= book.author.name %> â€“ Rated <%= book.average_rating.round(1) %>/5
    </li>
  <% end %>
</ul>

