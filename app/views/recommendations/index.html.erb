<h1>Book Recommendations</h1>

<%= form_tag recommendations_path, method: :get do %>
  <label for="genre">Choose a genre:</label>
  <%= select_tag :genre, options_for_select(@genres, params[:genre]) %>
  <%= submit_tag "Get Recommendations" %>
<% end %>

<% if @books.present? %>
  <h2>Recommended Books</h2>
  <ul>
    <% @books.each do |book| %>
      <li><strong><%= book.title %></strong> by <%= book.author.name %> â€“ Rated <%= book.rating %>/5</li>
    <% end %>
  </ul>
<% end %>

