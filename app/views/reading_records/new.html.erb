<h1>Rate a Book</h1>

<%= form_with model: @reading_record, local: true do |form| %>
  <div>
    <%= form.label :book_id, "Book" %>
    <%= form.collection_select :book_id, @books, :id, :title %>
  </div>

  <div>
    <%= form.label :rating, "Rating (1â€“5)" %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>

  <div>
    <%= form.label :comment, "Comment" %>
    <%= form.text_area :comment %>
  </div>

  <%= form.submit "Submit Rating" %>
<% end %>
